<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal">
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/textview1" android:layout_row="0" android:layout_column="0" android:layout_columnSpan="2"
          android:textSize="24px"/>
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/id_caller" android:layout_row="2" android:layout_column="0" android:enabled="true"/>
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/textView" android:layout_row="1" android:layout_column="0" android:textStyle="bold"
          android:layout_columnSpan="2" android:text="Einstellungen:" android:typeface="sans"
          android:textColor="#ffffff"
          android:textSize="30px"/>

  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/text_target"
          android:id="@+id/id_text_target" android:layout_row="5" android:layout_column="0" android:password="false"
          android:textStyle="bold"
          android:textSize="24px"/>

  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="+491728996856"
          android:id="@+id/id_text_targetnumber" android:layout_row="6" android:layout_column="0"
          android:enabled="true" android:inputType="phone"/>
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Akkustatus melden:"
          android:id="@+id/id_text_battery" android:layout_row="3" android:layout_column="0" android:textStyle="bold"
          android:textSize="24px"/>
  <ToggleButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New ToggleButton"
          android:id="@+id/toggleButton1" android:layout_row="3" android:layout_column="1" android:checked="false"/>
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Eingehende Anrufe melden:"
          android:id="@+id/textView1" android:layout_row="4" android:layout_column="0" android:textStyle="bold"
          android:paddingRight="20dp"
          android:textSize="24px"/>
  <ToggleButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/toggleButton" android:layout_row="4" android:layout_column="1" android:textStyle="bold"
          android:checked="false"/>
</GridLayout>